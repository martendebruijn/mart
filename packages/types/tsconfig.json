{
  "compilerOptions": {
    "target": "ES2020", // Output modern JavaScript
    "module": "ESNext", // Use ES modules for better tree-shaking
    "declaration": true, // Generate .d.ts files for type declarations
    "declarationMap": true, // Generate source maps for .d.ts files
    "emitDeclarationOnly": true, // Only emit type declarations, not JavaScript
    "moduleResolution": "Node", // Resolve modules like Node.js
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Improve compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type-checking of library files for faster builds
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing for file names
    "outDir": "./dist", // Directory for output files
    "rootDir": "./src", // Root directory of the source files
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "isolatedModules": true // Treat each file as an isolated module
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude dependencies and build output
}
